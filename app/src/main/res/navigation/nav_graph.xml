<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/introFragment">

    <fragment
        android:id="@+id/introFragment"
        android:name="com.example.membersgramtest.ui.fragment.IntroFragment"
        android:label="IntroFragment" >
        <action
            android:id="@+id/action_introFragment_to_privicyFragment"
            app:destination="@id/privicyFragment" />
    </fragment>
    <fragment
        android:id="@+id/privicyFragment"
        android:name="com.example.membersgramtest.ui.fragment.privicyFragment"
        android:label="privicyFragment" >
        <action
            android:id="@+id/action_privicyFragment_to_joinBotFragment"
            app:destination="@id/joinBotFragment" />
    </fragment>
    <fragment
        android:id="@+id/joinBotFragment"
        android:name="com.example.membersgramtest.ui.fragment.JoinBotFragment"
        android:label="JoinBotFragment" >
        <action
            android:id="@+id/action_joinBotFragment_to_verifyFragment6"
            app:destination="@id/verifyFragment6" />
    </fragment>
    <fragment
        android:id="@+id/verifyFragment6"
        android:name="com.example.membersgramtest.ui.fragment.VerifyFragment"
        android:label="VerifyFragment" >
        <action
            android:id="@+id/action_verifyFragment6_to_sendSmsFragment"
            app:destination="@id/sendSmsFragment" />
    </fragment>
    <fragment
        android:id="@+id/sendSmsFragment"
        android:name="com.example.membersgramtest.ui.fragment.SendSmsFragment"
        android:label="SendSmsFragment" >
        <action
            android:id="@+id/action_sendSmsFragment_to_fragmentStore"
            app:destination="@id/fragmentStore" />

    </fragment>

    <fragment
        android:id="@+id/fragmentStore"
        android:name="com.example.membersgramtest.ui.fragment.FragmentStore"
        android:label="FragmentStore" />
    <dialog
        android:id="@+id/successfultransferBottomsheet"
        android:name="com.example.membersgramtest.ui.fragment.SuccessfultransferBottomsheet"
        android:label="SuccessfultransferBottomsheet">
        <argument
            android:name="phoneNumber"
            app:argType="string" />

        <!-- Define the coin argument -->
        <argument
            android:name="coin"
            app:argType="string" />
    </dialog>

    <fragment
        android:id="@+id/fragCoinTransfer"
        android:name="com.example.membersgramtest.ui.fragment.FragmentTransferCoin"
        android:label="FragCoinTransfer">

        <!-- Define the phoneNumber argument inside com.example.membersgramtest.ui.fragment.FragCoinTransfer -->
        <argument
            android:name="phoneNumber"
            app:argType="string" />

        <!-- Define the coin argument -->
        <argument
            android:name="coin"
            app:argType="string" />

        <action
            android:id="@+id/action_fragCoinTransfer_to_successfultransferBottomsheet"
            app:destination="@id/successfultransferBottomsheet" />
    </fragment>
    <fragment
        android:id="@+id/paymentFragment2"
        android:name="com.example.membersgramtest.PaymentFragment"
        android:label="PaymentFragment" />


</navigation>

<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="SplashTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <!-- Add your own colorPrimary, colorPrimaryDark, colorAccent, statusBarColor as needed -->

    </style>

    <style name="OutlinedBoxStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <!-- Add any additional styling here -->
    </style>

    <style name="TextInputLayoutOutlinedBox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <!-- Other attributes for your TextInputLayout style -->

        <!-- Add errorTextAppearance attribute with custom text appearance style -->
        <item name="errorTextAppearance">@style/CustomErrorTextAppearance</item>
    </style>

    <!-- Define a custom text appearance style for the error message -->
    <style name="CustomErrorTextAppearance" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">1sp</item> <!-- Adjust the textSize as needed -->
        <!-- You can also customize other attributes like textColor, etc. here -->
    </style>







</resources>
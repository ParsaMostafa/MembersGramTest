<?xml version="1.0" encoding="utf-8"?>
<!-- res/drawable/selected_button_border.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#E3F2FD" /> <!-- Selected background color -->
            <corners android:radius="60dp" /> <!-- Rounded corners radius -->
        </shape>
    </item>
    <item android:right="5dp" android:left="5dp" android:top="5dp" android:bottom="5dp">
        <shape android:shape="rectangle">
            <solid android:color="#E3F2FD" /> <!-- Border color -->
            <corners android:radius="60dp" /> <!-- Rounded corners radius -->
        </shape>
    </item>
</layer-list>

